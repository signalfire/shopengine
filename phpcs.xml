<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>
    <rule ref="PSR2"/>

    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/migrations/*</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>

    <arg value="p"/>
</ruleset>
